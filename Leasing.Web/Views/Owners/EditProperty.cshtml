@model Leasing.Web.Models.PropertyViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-center">Edit Property</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditProperty">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OwnerId" />
            <input type="hidden" asp-for="Id" />

            <partial name="_Property" />
 
            <div class="form-group">
                <a asp-action="Details" asp-route-id="@Model.OwnerId" class="btn btn-success">Back to Owner</a>
                <input type="submit" value="Update" class="btn btn-primary" />

            </div>
        </form>
    </div>
</div>
